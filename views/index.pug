html(lang="en")
  head
    title= title
  body 
    table
      tr
        td Ship Name
        td IMO Number 
        td Location 
        td Coordinates 
        td Destination 
        td Speed 
        td ETA 
        td Data age
        td Current wind 
        td Wind in 6H
      div#shiplist
        each ship in ships 
          tr#ship
          td= ship.name
          td= ship.imo
          td= ship.area
          td= ship.coordinates
          td= ship.destination 
          td= ship.speed
          td= ship.eta
          td= ship.dataAge
    button(type="button" id="button" onclick="getShipsUpdate()") UPDATE

  script.
    const shiplist = document.getElementById("shiplist");

    function renderShipList(ships) {
      let output = "";
      for(let ship of ships) {
        output+= `<tr><td>${ship.name}</td>`;
      }
      shiplist.innerHTML = output;
      alert("Rendered new info");
    }


    const Http = new XMLHttpRequest();
    const url = "http://localhost:3000/api/getships";

    function getShipsUpdate() {
      Http.open("GET", url);
      Http.send();

      Http.onreadystatechange = function() {
        if(this.readyState == 4) {
        alert(Http.responseText);
        ships = JSON.parse(Http.responseText);
        renderShipList(ships);
        }
      }
      Http.send(null);
      }